<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anifichadia.sampleapp">

    <application
        android:name=".WoofyQuizApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidprojectbootstrap"
        tools:replace="android:name,android:theme">

        <!-- Note: being a bit cheeky and locking the orientation to portrait for simplicity -->
        <activity
            android:name=".feature.MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".feature.multiplechoicequiz.MultipleChoiceQuizActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.quizresults.QuizResultsActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.anifichadia.bootstrap.testing.ui.testframework.UiComponentTestActivity" />

    </application>

</manifest>
